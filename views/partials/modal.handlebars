<div class="modal fade" id="notesModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="notesTitle">Notes For Article:</h5>
            </div>
            <div class="modal-body">
                <p id="notesBody">
                    Notes placeholder
                </p>
                <hr>
                <form>
                    <input id="notesInput" type="text" placeholder="New note..." style="width: 100%; height: 15vh">
                </form>
            </div>

            <div class="modal-footer">
                <button id="saveNoteBtn" type="button" class="btn btn-warning" data-dismiss="modal">Save
                    Note</button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>